---
import '../styles/shared-styles.css'
import ThemeIcon from '../components/ThemeIcon.astro';
---
<style>
  .search-container{
    width: 300px;
    height: 45px;
    margin-right: 10px;
  }
input#search-bar{
  width: 100%;
  height: 45px;
  padding-left: 10px;

  font-size: 1rem;
  border: 2px solid var(--primary-clr);
  transition: 0.35s ease;
  outline: none;
  &:focus{
    border: 2px solid var(--primary-clr);
    transition: 0.35s ease;
    color: var(--primary-clr);border-radius: 10px;
    &::-webkit-input-placeholder{
      transition: opacity 0.45s ease; 
  	  opacity: 0;
     }
    &::-moz-placeholder {
      transition: opacity 0.45s ease; 
  	  opacity: 0;
     }
    &:-ms-placeholder {
     transition: opacity 0.45s ease; 
  	 opacity: 0;
     }    
   }
 }
.submit-magnifying-glass{
  position: relative;
  height: 25px;
  width: 25px;
  float: right;
  right: 0px;
  top: -37px;
  cursor: pointer;
  border: unset;
  background-color: unset;
}
.fa-magnifying-glass{
  
  color: var(--primary-clr);
  
  font-size: 25px;
  
}
header{
  box-shadow: 0px 0px 10px var(--box-shadow-1);
  position: fixed;
  width: 100%;
  background-color: white;
  z-index: 2;
}
.subnav{
    display: flex;
    align-items: center;
}
nav{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1% 10%;
    
}
.hamburger {
  padding-right: 1%;
  cursor: pointer;
}

.hamburger .line {
  display: block;
  width: 40px;
  height: 2px;
  background-color: black;
}
.hamburger .line:not(:last-child){
  margin-bottom: 10px;
}
.logo{
  font-size: 24px;
  color: var(--primary-clr);
}
</style>
<header>
    <nav>
        <div class="hamburger" id="hamburger-nav">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>
        <div class="logo"><h1>RecipeCo</h1></div>
        <div class="subnav">
            <ul>
                <li><a href=""></a></li>
                <li><a href=""></a></li>
                <li><a href=""></a></li>
            </ul>
            <form class="search-container">
    <input type="text" id="search-bar" placeholder="What can I help you with today?">
    <button type="submit" class="submit-magnifying-glass"><i class="fa-solid fa-magnifying-glass"></i></button>
  </form>
  <ThemeIcon/>
        </div>
    </nav>
</header>
<script>
  function openNav() {
  document.getElementById("aside").style.left = "0px";
}
document.getElementById("hamburger-nav").addEventListener("click", openNav);

</script>